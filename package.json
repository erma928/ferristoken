{
  "name": "@settlemint/solidity-token-erc20",
  "version": "4.0.0",
  "description": "An ERC20 compliant token",
  "scripts": {
    "lint": "pnpm solhint 'contracts/**/*.sol'",
    "compile": "pnpm hardhat compile",
    "test": "pnpm hardhat test",
    "test:typecheck": "pnpm hardhat test --typecheck",
    "smartcontract:deploy": "pnpm hardhat deploy --network ${DEFAULT_NODE}",
    "smartcontract:deploy:reset": "pnpm hardhat deploy --network ${DEFAULT_NODE} --reset",
    "graph:all": "pnpm graph:config && pnpm graph:compile && pnpm graph:fix && pnpm graph:codegen && pnpm graph:build && pnpm graph:deploy",
    "graph:config": "pnpm hardhat graph:config --network ${DEFAULT_NODE}",
    "graph:compile": "pnpm graph-compiler --config subgraph.config.json --include node_modules/@openzeppelin/subgraphs/src/datasources subgraph/datasources --export-schema --export-subgraph",
    "graph:fix": "node scripts/fix-graph-manifest.ts generated/solidity-token-erc20.subgraph.yaml",
    "graph:codegen": "pnpm graph codegen generated/solidity-token-erc20.subgraph.yaml",
    "graph:build": "pnpm graph build generated/solidity-token-erc20.subgraph.yaml",
    "graph:deploy": "/bin/bash -c 'eval \"$(shdotenv -e ./.secrets/env)\"; if [ \"$MIDDLEWARE\" == \"\" ]; then echo \"You have not launched a graph middleware for this smart contract set, aborting...\"; exit 1; fi; graph create --node ${MIDDLEWARE} ${SCS}; graph deploy --version-label v1.0.$(date +%s) --node ${MIDDLEWARE} --ipfs ${MIDDLEWARE_IPFS}/api/v0 ${SCS} generated/solidity-token-erc20.subgraph.yaml'"
  },
  "author": "SettleMint <hello@settlemint.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@chainlink/contracts": "0.8.0",
    "@nomicfoundation/hardhat-ethers": "3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "1.0.10",
    "@nomicfoundation/hardhat-toolbox": "2.0.2",
    "@nomiclabs/hardhat-solhint": "3.0.1",
    "@typechain/ethers-v5": "11.1.2",
    "@types/chai": "4.3.11",
    "@types/js-yaml": "4.0.9",
    "@types/lodash": "4.14.202",
    "@types/mocha": "10.0.6",
    "@types/node": "18.19.2",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "chai": "4.3.10",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "ethers": "5.7.2",
    "hardhat": "2.19.2",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-deploy": "0.11.44",
    "hardhat-deploy-ethers": "0.4.0-next.1",
    "hardhat-log-remover": "2.0.2",
    "prettier": "3.1.0",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "4.0.0",
    "solhint-plugin-prettier": "0.1.0",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.3.2",
    "typescript": "5.3.2",
    "yaml": "2.3.4"
  },
  "dependencies": {
    "@amxx/graphprotocol-utils": "1.1.0",
    "@graphprotocol/graph-cli": "0.62.0",
    "@graphprotocol/graph-ts": "0.31.0",
    "@metamask/eth-sig-util": "7.0.1",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@openzeppelin/subgraphs": "0.1.8-5",
    "chalk": "4.1.2",
    "ethereumjs-wallet": "1.0.2",
    "form-data": "4.0.0",
    "image-size": "1.0.2",
    "ipfs-http-client": "56.0.3",
    "it-all": "2.0.1",
    "js-yaml": "4.1.0",
    "keccak256": "1.0.6",
    "lodash": "4.17.21",
    "merkletreejs": "0.3.11",
    "nft.storage": "7.1.1",
    "slugify": "1.6.6",
    "uint8arrays": "4.0.9"
  },
  "resolutions": {
    "colors": "1.4.0",
    "@web-std/fetch": "4.2.1",
    "ipfs-http-client@34.0.0>concat-stream": "github:mihirgupta0900/concat-stream#master"
  }
